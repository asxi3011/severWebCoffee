<script>
    document.addEventListener("DOMContentLoaded", function () {
        var bublle_notifycation_number = $(".bublle-notifycation-number");
        var bublle_notifycation = $(".bublle-notifycation");
        var btn_logout = $("#btn_logout");
        btn_logout.on("click", function () {
            document.cookie = "Token=; expires=Thu, 01 Jan 1970 00:00:00 UTC; path=/;";
            location.reload();
        })
        var socket = io("https://sever-coffeehouse.herokuapp.com/",{ transports : ['websocket'] });
        socket.on("nhan-don-hang", function () {

            var soluong = countOrder();
            soluong.then(data => {
                var test = data.data;

                if (test > 0) {
                    bublle_notifycation_number.text(test);
                    bublle_notifycation.removeClass("d-none")
                } else {
                    bublle_notifycation_number.text("");
                    bublle_notifycation.addClass("d-none")
                }
            })
        })
        var soluong = countOrder();
        soluong.then(data => {
            var test = data.data;
            bublle_notifycation_number.text(test);
            if (test > 0) {
                bublle_notifycation.removeClass("d-none")
            } else {
                bublle_notifycation_number.text("");
                bublle_notifycation.addClass("d-none")
            }
        })

    })
    async function countOrder() {
        try {
            const response = await axios.get('/me/countOrderPending');
            console.log("HERE",response)
            return response;
        } catch (error) {
            console.error(error);
        }
    }
